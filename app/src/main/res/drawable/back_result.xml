<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#00000000"/>
            <!--<corners android:radius="8dp"/>-->
            <stroke android:color="@color/redBox1" android:width="1dp"></stroke>
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom="1dp" android:top="1dp">
        <shape android:shape="rectangle">
        <gradient
            android:type="linear"
            android:centerX="99%"
            android:startColor="#FFA1A1A1"
            android:centerColor="#FFC2C2C2"
            android:endColor="#FFC2C2C2"
            android:angle="360"/>
    </shape>
    </item>
</layer-list>